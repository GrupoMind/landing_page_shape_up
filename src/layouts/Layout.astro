---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Shape Up is a product development methodology that helps teams deliver the right features, in the right timeframe, with the right quality." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: 51, 102, 204;
		--primary-light: 102, 170, 255;
		--primary-dark: 25, 51, 102;
		--secondary: 255, 102, 102;
		--gray-100: 245, 245, 245;
		--gray-200: 229, 229, 229;
		--gray-300: 212, 212, 212;
		--gray-800: 38, 38, 38;
		--gray-900: 23, 23, 23;
		--gradient-primary: linear-gradient(
			45deg,
			rgb(var(--primary)),
			rgb(var(--primary-light)) 70%
		);
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: #ffffff;
		color: rgb(var(--gray-800));
		scroll-behavior: smooth;
	}
	
	body {
		line-height: 1.6;
	}
	
	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
	}
	
	img {
		max-width: 100%;
		height: auto;
	}
	
	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
	
	.btn {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		font-weight: 600;
		text-decoration: none;
		border-radius: 6px;
		transition: all 0.3s ease;
		cursor: pointer;
	}
	
	.btn-primary {
		background: rgb(var(--primary));
		color: white;
		border: 2px solid rgb(var(--primary));
	}
	
	.btn-primary:hover {
		background: rgb(var(--primary-dark));
		border-color: rgb(var(--primary-dark));
	}
	
	.btn-secondary {
		background: transparent;
		color: rgb(var(--primary));
		border: 2px solid rgb(var(--primary));
	}
	
	.btn-secondary:hover {
		background: rgba(var(--primary), 0.1);
	}
	
	.section {
		padding: 5rem 0;
	}
	
	.text-gradient {
		background-image: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	
	@media (max-width: 768px) {
		.section {
			padding: 3rem 0;
		}
	}
</style>
